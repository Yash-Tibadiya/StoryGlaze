<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head.ejs') %>
    <title>Blog</title>
</head>

<body>
  <%- include('./partials/nav.ejs') %>

    <div class="container mt-4">
      <h1>
        <%= blog.title %>
      </h1>
      <img class="mt-4" src="/public/<%= blog.coverImageURL %>" alt="blog cover image" width="900px">
      <p class="mt-4">
        <%= blog.body %>
      </p>
    </div>

    <div class="container mt-4">
      <img src="<%= blog.createdBy.profileImageURL %>" alt="Profile Image" width="50px">
      <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
      <h1>Comments (<%= comments.length %>)</h1>
      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <div class="mb-3">
            <input type="text" name="content" class="form-control" aria-describedby="Enter your comment"></input>
            <button class="btn btn-sm btn-primary mt-2" type="submit">Add</button>
          </div>
        </form>
        <% } %>
          <div class="mt-3 mb-3">
            <% comments.forEach(comment=> { %>
              <div class="card">
                <div class="card-body">
                  <img src="/public/images/default.png" alt="Profile Image" width="50px">
                  <%= comment.content %>
                </div>
              </div>
              <% }) %>
          </div>
    </div>

    <%- include('./partials/scripts.js') %>
</body>

</html>