<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head.ejs') %>
    <title>HomePage</title>
</head>

<body>
  <%- include('./partials/nav.ejs') %>

    <div class="container mt-4">
      <div class="row row-cols-4">
        <% blogs.forEach((blog)=> { %>
          <div class="col mt-4">
            <div class="card col" style="width: 18rem;">
              <img src="/public/<%= blog.coverImageURL %>" class="card-img-top" alt="cover image" height="200px">
              <div class="card-body">
                <h5 class="card-title">
                  <%= blog.title %>
                </h5>
                <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts.js') %>
</body>

</html>